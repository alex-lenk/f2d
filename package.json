{
  "name": "fun2day",
  "version": "2.0.3",
  "description": "Frontend project on fun2day",
  "main": "gulpfile.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/fun2day/main"
  },
  "scripts": {
    "start": "gulp start",
    "build": "gulp build",
    "lighthouse": "gulp build && gulp lighthouse",
    "test": "editorconfig-cli && stylelint ./src/styles/**/*.scss --syntax scss && eslint ./src/js",
    "stylelint-fix": "stylelint ./src/styles/**/*.scss --fix --syntax scss",
    "eslint-fix": "eslint ./src/js/** --fix",
    "watch": "gulp --developer",
    "prodwatch": "gulp",
    "devbuild": "gulp build --developer"
  },
  "keywords": [
    "fun2day",
    "gulpfile",
    "babel",
    "webpack"
  ],
  "author": "Alex Lenk",
  "license": "ISC",
